{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks",
    "buildCommand": "npm install && npm run build && php artisan optimize:clear",
    "startCommand": "php artisan serve --port=$PORT --host=0.0.0.0"
  },
  "deploy": {
    "startCommand": "php artisan migrate --force && php artisan serve --port=$PORT --host=0.0.0.0",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "checks": {
    "healthcheck": {
      "path": "/",
      "port": "$PORT",
      "timeout": 300,
      "interval": 15,
      "maxRetries": 3
    }
  }
}